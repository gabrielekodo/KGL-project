.wrapper
  // Sidebar
  nav#sidebar
    .sidebar-header
      h3
        img(src='./Img/logo5.jpg' style='width:160px; height:160px; border-radius: 3px; background-color: #ddd;')
      strong KGL
    ul.list-unstyled.components(style='font-size: 19px;')
      li
        a(href='#')
          i.fas.fa-home
          |                         Home
      li
        a(href='Produce purchases.html')
          i.fas.fa-copy
          |                         Purchases
      li
        a(href='sales input.html')
          i.fas.fa-copy
          |                         Sales
      li.active
        a(href='#' style='color:#181553')
          i.fas.fa-briefcase
          |                         Records
      li
        a(href='#')
          i.fas.fa-paper-plane
          |                         Contact
      li
        a(href='account.html')
          i.fas.fa-user
          |                         Account
  // Page Content
  #content
    nav.navbar.navbar-expand-lg.navbar-light(style='background:#efeef0')
      .container-fluid.row
        .col-md-11.row
          .col-md-1
            button#sidebarCollapse.btn.btn-primary(type='button' style='background:#181553')
              i.fas.fa-align-left
            button.btn.btn-dark.d-inline-block.d-lg-none.ml-auto(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
              i.fas.fa-align-justify
          .col-md-10
            h2(style='margin-left:15px;margin-top: 20px; color:#181553;') Karibu Groceries Ltd, Purchase Records
        #navbarSupportedContent.collapse.navbar-collapse.col-md-1
          ul.nav.navbar-nav.ml-auto
            li.nav-item.active
              button.btn.btn-outline-primary
                a.nav-link(href='index.html' style='color:#181553;  ') LogOut
    #blog-container.container-fluid
      .row
        .col-md-12
          .main.custom1
            h2.txt1(style='font-size:45px;text-decoration: underline;')
              | Supplier Purchases Record
            .table-responsive(style='padding:20px;')
              table.table.table-bordered.table-hover.table-secondary
                thead
                  tr
                    th Branch
                    th Supplier                   
                    th Product                   
                    th Qty,tonnes                    
                    th Total(shs)
                    th Delete
                    th Edit
                tbody(style='overflow-y: scroll;')
                if users.length
                  each user in users
                    tr
                      td #{user.branch}
                      td #{user.customername}                      
                      td #{user.pdct}                                             
                      td #{user.quantity}                      
                      td #{user.total} 
                      td
                        form.delete(method="post" action='/purchaselist/delete')
                          input(type="hidden", placeholder="", name="id", value=user._id)
                          button(type="submit") Delete 
                      td
                        form(action="/purchaselist/edit/"+user._id)
                          input(type="hidden")
                          button(type="submit") Edit                                                                                                                           
