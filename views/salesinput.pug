  #content
    nav.navbar.navbar-expand-lg.navbar-light(style='background:#efeef0')
      .container-fluid.row
        .col-md-11.row
          .col-md-1
            button#sidebarCollapse.btn.btn-primary(type='button' style='background:#181553')
